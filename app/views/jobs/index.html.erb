<div class="pull-right">
  <%= link_to("添加职缺", new_job_path, :class => "btn btn-default") %>
</div>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= link_to("编辑", edit_job_path(job), :class => "btn btn-xs btn-default")%>
        |
        <%= link_to("删除", job_path(job), :method => :delete, :class => "btn btn-xs btn-default", :data => { :confirm => "删除这项工作，你确定吗?"}) %>
      </td>
      <td>
        <%= job.created_at%>
      </td>
    </tr>
    <% end %>
</table>
