<div class="pull-right">
  <%= link_to("添加一项职缺", new_job_path, :class => "btn btn-default") %>
</div>

<br><br>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>

    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= link_to("编辑", edit_job_path(job),:class => "btn btn-xs btn-default") %> |
      <%= link_to("删除", job_path(job), :class => "btn btn-xs btn-default",:method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
